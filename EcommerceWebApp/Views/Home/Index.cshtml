@model EcommerceWebApp.Models.CustomerModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-3 mx-3" style="margin-top:25px ;">
    <div class="col-md-3">
   
        <div class="text-center">
           <img  src="~/images/logo-black.png" style="max-width:100%; max-height:100%">
        </div>

    </div>
    <div class="col-md-9 justify-content-center">
        <div class="card card-custom pb-4">
            <div class="card-body mt-0 mx-5">
                <div class="text-center mb-3 pb-2 mt-3">
                    <h4 style="color: #495057 ;">Calculate Your Premium</h4>
                </div>

                <form class="mb-0" asp-controller="Home" asp-action="GetQuote">
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="Name">Name </label>
                                <input type="text" asp-for="Name" class="form-control input-custom" required />

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="NationalID">National ID</label>
                                <input type="text" asp-for="NationalID" class="form-control input-custom" required />

                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="City">City</label>
                                <input type="text" asp-for="City" class="form-control input-custom" required />

                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="Dob">Date of Birth</label>
                                <input type="text" asp-for="Dob" class="form-control input-custom" required />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="Gender">Gender</label>
                                <input type="text" asp-for="Gender" class="form-control input-custom" required />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="Marital_status">Marital Status</label>
                                <input type="text" asp-for="Marital_status" class="form-control input-custom" required />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <label class="form-label" asp-for="Vehicle_make">Vehicle Make</label>
                                <input type="text" asp-for="Vehicle_make" class="form-control input-custom" required />
                            </div>
                        </div>
                        <div class="col">
                            <!-- Submit button -->
                            <div class="form-outline">
                                <div class="form-label"> . </div>
                                <button type="submit" class="btn btn-primary btn-rounded form-control input-custom "
                                        style="background-color: #0062CC ;">
                                    Get A Quote
                                </button>
                            </div>
                        </div>
                    </div>

                </form>

            
            </div>
        </div>
    </div>
</div>
